{
  "name": "express-node-ts",
  "version": "0.1.0",
  "description": "An adapted starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/Thomas-Rosenkrans-Vestergaard/express-node-ts"
  },
  "author": "Bowden Kelly",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css -o dist/public/css",
    "watch-sass": "node-sass -w src/public/css -o dist/public/css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@types/showdown": "^1.9.2",
    "async": "^2.6.2",
    "bcrypt": "^3.0.5",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-mongo": "^2.0.3",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-flash": "0.0.2",
    "express-graphql": "^0.8.0",
    "express-handlebars": "3.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "fastest-validator": "^0.6.17",
    "handlebars": "^4.1.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.5",
    "lusca": "^1.6.1",
    "mongoose": "5.4.19",
    "nodemailer": "^4.7.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "showdown": "^1.9.0",
    "stack-trace": "0.0.10",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.1.3",
    "@types/async": "^2.4.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.35",
    "@types/connect-mongo": "^0.0.35",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.8.0",
    "@types/express-handlebars": "0.0.30",
    "@types/express-session": "^1.15.12",
    "@types/graphql": "^14.2.0",
    "@types/handlebars": "4.0.40",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.122",
    "@types/lusca": "^1.5.0",
    "@types/mongodb": "3.1.22",
    "@types/mongoose": "5.3.22",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.44",
    "@types/nodemailer": "^4.6.6",
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.7.9",
    "@types/stack-trace": "0.0.29",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "concurrently": "^3.6.1",
    "graphql": "^14.3.0",
    "jest": "^24.1.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.10",
    "shelljs": "^0.8.3",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.13.1",
    "typescript": "3.3",
    "@graphql-codegen/typescript": "1.1.3",
    "@graphql-codegen/typescript-resolvers": "1.1.3",
    "@graphql-codegen/typescript-mongodb": "1.1.3"
  }
}
