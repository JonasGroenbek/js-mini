{{>head}}
<div class="row">
    <div class="col s12">
        <h2>Authenticate</h2>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <form method="POST">
            {{formErrors formErrors.form}}
            <div class="row">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" name="email" type="email" class="validate" required>
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" name="password" type="password" class="validate" required>
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button class="waves-effect waves-light btn-large">Authenticate</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{>tail}}