{{>head}}
<h2>Posts</h2>
<div class="posts">
    {{#unless posts}}
        <p>Sorry, there are currently no posts.</p>
    {{/unless}}
    {{#each posts}}
        <div class="row">
        <div class="col s12 post panel pad">
            <h3 class="title">{{this.title}}</h3>
            <div class="details" style="margin-bottom: 20px">
                <p class="created">{{this.created}}</p>
                <p class="author">{{this.author.firstName}} {{this.author.lastName}}</p>
                <p class="position">{{position this.position}}</p>
            </div>
            <div class="content text">
                {{markdown this.content}}
            </div>

            {{#if this.images.length }}
                <!-- Slider main container -->
                <div class="swiper-container" style="margin-top: 20px">
                    <!-- Additional required wrapper -->
                    <div class="swiper-wrapper">
                        <!-- Slides -->

                        {{#each this.images}}
                            <div class="swiper-slide" style="text-align: center">
                                <img alt="location image" style="max-width: 100%" src="{{{this}}}"/>
                            </div>

                        {{/each}}
                        ...
                    </div>

                    <!-- If we need navigation buttons -->
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>

                </div>
                <script>
                    var mySwiper = new Swiper('.swiper-container', {
                        // Optional parameters
                        direction: 'vertical',

                        // Navigation arrows
                        navigation: {
                            nextEl: '.swiper-button-next',
                            prevEl: '.swiper-button-prev',
                        },
                    })
                </script>
                <style>
                    .swiper-container {
                        width: 100%;
                        height: 500px;
                    }
                </style>
            </div>
            {{/if}}
        </div>
    {{/each}}
</div>
{{>tail}}